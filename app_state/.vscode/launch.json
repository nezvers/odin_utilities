            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/demo.bin",
        },
        {
            "type": "lldb",
            "request": "launch",
            "preLaunchTask": "Build Release",
            "name": "Run Release (Linux / Mac)",
